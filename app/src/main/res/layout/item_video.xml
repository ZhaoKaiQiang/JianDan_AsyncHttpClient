<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2.0dip"
                                    app:cardCornerRadius="2.0dip"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:orientation="vertical"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="8.0dip">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2.0dip"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="#ff000000"
                android:textSize="13.0sp"/>

            <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="4.0dip">

                        <TextView
                            android:id="@+id/tv_support_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:text="OO"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minEms="1"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_unsupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="4.0dip">

                        <TextView
                            android:id="@+id/tv_unsupport_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:text="XX"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_unlike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minEms="1"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="4.0dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:text="吐槽"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"/>

                        <TextView
                            android:id="@+id/tv_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minEms="1"
                            android:paddingLeft="2.0dip"
                            android:paddingRight="2.0dip"
                            android:text=""
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textSize="10.0sp"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_more_horiz_grey600_24dp"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>